<header class="bg-gray-800 shadow-md">
    <nav class="container mx-auto p-4 flex justify-between items-center">

        <a href="/" class="text-2xl font-bold text-white hover:text-blue-400 transition duration-150">
            FlowShare
        </a>

        <div class="space-x-4 flex items-center">
            
            <% if (typeof user !== 'undefined' && user) { %>
                <a href="/nav/main-page" class="text-gray-300 hover:text-white 
                    <% if (pageTitle === 'Dashboard') { %> text-blue-400 font-semibold <% } %>">
                    Dashboard
                </a>
                
                <a href="/groups/detail/101" class="text-gray-300 hover:text-white">
                    Groups Hub
                </a>

                <a href="/api/users/<%= user.id %>" class="text-gray-300 hover:text-white">
                    Hi, <%= user.firstName || user.username %>
                </a>

                <form action="/auth/logout" method="POST" class="inline">
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-1.5 px-3 rounded transition duration-150">
                        Logout
                    </button>
                </form>

            <% } else { %>
                <a href="/login" class="text-gray-300 hover:text-white 
                    <% if (pageTitle === 'Login') { %> text-blue-400 font-semibold <% } %>">
                    Login
                </a>

                <a href="/register" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-1.5 px-3 rounded transition duration-150">
                    Register
                </a>
            
            <% } %>
            
        </div>
    </nav>
</header>