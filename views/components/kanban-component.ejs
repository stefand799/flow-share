<!-- ============================================
     KANBAN COMPONENT - PLACEHOLDER
     ============================================
     
     Temporary placeholder for kanban board.
     Shows task list without drag-and-drop.
============================================ -->

<div class="kanban-placeholder">
    <div class="placeholder-message">
        <h3>ðŸ“‹ Kanban Board</h3>
        <p>Kanban board component is being implemented.</p>
        <p>Tasks will appear here soon!</p>
        
        <% if (tasks && tasks.length > 0) { %>
            <div class="task-count">
                <strong><%= tasks.length %></strong> task<%= tasks.length !== 1 ? 's' : '' %> in this group
            </div>
        <% } else { %>
            <div class="empty-state">
                <p>No tasks yet. Create your first task!</p>
            </div>
        <% } %>
    </div>
</div>

<style>
.kanban-placeholder {
    background: white;
    border-radius: 12px;
    padding: 3rem 2rem;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.placeholder-message h3 {
    font-size: 1.5rem;
    color: #2d3748;
    margin: 0 0 1rem 0;
}

.placeholder-message p {
    color: #718096;
    margin: 0.5rem 0;
}

.task-count {
    margin-top: 1.5rem;
    padding: 1rem;
    background: #edf2f7;
    border-radius: 8px;
    font-size: 1.125rem;
}

.empty-state {
    margin-top: 1.5rem;
    padding: 2rem;
    background: #f7fafc;
    border: 2px dashed #cbd5e0;
    border-radius: 8px;
}
</style>