<script src="/js/components/profile-component.js"></script>
<div id="user-profile-container" class="max-w-xl mx-auto p-6 bg-white shadow-lg rounded-xl">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 border-b pb-2">User Profile</h2>

    <!-- User Details Display -->
    <div id="profile-details" data-user-id="<%= user.id %>" class="space-y-4">

        <div class="detail-item">
            <p class="text-sm font-medium text-gray-500">Username</p>
            <p class="text-lg font-semibold text-gray-900" id="display-username">
                <%= user.username %>
            </p>
        </div>

        <div class="detail-item">
            <p class="text-sm font-medium text-gray-500">Full Name</p>
            <p class="text-lg text-gray-700" id="display-name">
                <%= user.firstName || 'N/A' %>
                    <%= user.lastName || '' %>
            </p>
        </div>

        <div class="detail-item">
            <p class="text-sm font-medium text-gray-500">Email Address</p>
            <p class="text-lg text-gray-700" id="display-email">
                <%= user.emailAddress %>
            </p>
        </div>

        <div class="detail-item">
            <p class="text-sm font-medium text-gray-500">Phone Number</p>
            <p class="text-lg text-gray-700" id="display-phone">
                <%= user.phoneNumber || 'N/A' %>
            </p>
        </div>

        <div class="detail-item">
            <p class="text-sm font-medium text-gray-500">Bio</p>
            <p class="text-base text-gray-700 italic" id="display-bio">
                <%= user.bio || 'Tell us a bit about yourself.' %>
            </p>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex justify-between space-x-4">
        <button id="edit-profile-btn"
            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-150">
            Edit Profile
        </button>
        <button id="logout-btn"
            class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 rounded-lg transition duration-150">
            Logout
        </button>
        <button id="delete-account-btn"
            class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 rounded-lg transition duration-150">
            Delete Account
        </button>
    </div>
</div>

<div id="edit-modal" class="modal hidden">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-md p-6">
        <h3 class="text-2xl font-bold mb-4 border-b pb-2">Edit Your Profile</h3>

        <form id="edit-profile-form" action="/api/users/<%= user.id %>" method="PUT">

            <div class="edit-form-content">
                <div class="form-group">
                    <label for="edit-username">Username</label>
                    <input type="text" id="edit-username" name="username" value="<%= user.username %>" required
                        readonly>
                </div>

                <div class="form-group">
                    <label for="edit-firstName">First Name</label>
                    <input type="text" id="edit-firstName" name="firstName" value="<%= user.firstName || '' %>">
                </div>

                <div class="form-group">
                    <label for="edit-lastName">Last Name</label>
                    <input type="text" id="edit-lastName" name="lastName" value="<%= user.lastName || '' %>">
                </div>

                <div class="form-group">
                    <label for="edit-bio">Bio</label>
                    <textarea id="edit-bio" name="bio" rows="3"><%= user.bio || '' %></textarea>
                </div>

                <div class="form-group">
                    <label for="edit-phoneNumber">Phone Number</label>
                    <input type="tel" id="edit-phoneNumber" name="phoneNumber" value="<%= user.phoneNumber || '' %>">
                </div>
            </div>

            <div class="button-group">
                <button type="button" id="cancel-edit-btn" class="btn-secondary">
                    Cancel
                </button>
                <button type="submit" class="btn-primary">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<div id="logout-modal" class="modal hidden">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-sm p-6 text-center">
        <h3 class="text-2xl font-bold text-red-600 mb-3">Logging out</h3>
        <p class="text-lg font-semibold mb-6">Are you sure you want to proceed?</p>

        <form id="logout-profile-form" action="/auth/logout" method="POST"> <div class="button-group">
                <button type="button" id="cancel-logout-btn" class="btn-secondary">
                    Cancel
                </button>
                <button type="submit" class="btn-primary bg-red-600 hover:bg-red-700">
                    Yes, Log Me Out </button>
            </div>
        </form>
    </div>
</div>

<div id="delete-modal" class="modal hidden">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-sm p-6 text-center">
        <h3 class="text-2xl font-bold text-red-600 mb-3">Permanent Deletion</h3>
        <p class="text-gray-700 mb-6">
            <strong class="font-extrabold text-red-700">WARNING:</strong> Deleting your account is permanent and cannot
            be undone. All associated data will be lost.
        </p>

        <p class="text-lg font-semibold mb-6">Are you absolutely sure you want to proceed?</p>

        <form id="delete-profile-form" action="/api/users/<%= user.id %>" method="DELETE">
            <div class="button-group">
                <button type="button" id="cancel-delete-btn" class="btn-secondary">
                    Cancel
                </button>
                <button type="submit" class="btn-primary bg-red-600 hover:bg-red-700">
                    Yes, Delete My Account
                </button>
            </div>
        </form>
    </div>
</div>
