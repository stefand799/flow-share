<div id="expense-form-modal" class="modal hidden">
    <div class="modal-content">
        <h3 id="expense-modal-title" class="text-xl font-bold mb-4">Add New Expense</h3>
        
        <form id="expense-form">
            <!-- Hidden field for expense ID (used for editing) -->
            <input type="hidden" id="expense-id" name="id" value="">
            
            <div class="form-group">
                <label for="expense-title">Title</label>
                <input type="text" id="expense-title" name="title" required placeholder="e.g., Groceries for the week">
            </div>

            <div class="form-group">
                <label for="expense-value">Amount</label>
                <input type="number" step="0.01" id="expense-value" name="value" required placeholder="0.00">
            </div>

            <div class="form-group">
                <label for="expense-currency">Currency</label>
                <select id="expense-currency" name="currency">
                    <option value="USD">USD ($)</option>
                    <option value="EUR" selected>EUR (â‚¬)</option>
                    <option value="RON">RON (Lei)</option>
                </select>
            </div>

            <div class="form-group">
                <label for="expense-description">Description (Optional)</label>
                <textarea id="expense-description" name="description" rows="3" placeholder="Details about what the money was spent on..."></textarea>
            </div>

            <div class="form-group">
                <label for="expense-due">Due Date (Optional)</label>
                <input type="date" id="expense-due" name="due">
            </div>
            
            <div class="button-group mt-4">
                <button type="button" id="cancel-expense-btn" class="btn-secondary">Cancel</button>
                <button type="submit" id="submit-expense-btn" class="btn-primary">Save Expense</button>
            </div>
        </form>
    </div>
</div>

<!-- 2. Record Contribution Modal -->
<div id="contribution-modal" class="modal hidden">
    <div class="modal-content">
        <h3 class="text-xl font-bold mb-4">Record Contribution</h3>
        
        <form id="contribution-form">
            <!-- Hidden field for the target expense ID -->
            <input type="hidden" id="contribution-expense-id" name="expenseId">
            
            <p class="text-lg mb-4">
                Expense: <span id="contribution-expense-title" class="font-semibold"></span> 
                (Remaining: <span id="contribution-expense-balance" class="font-bold text-red-600"></span>)
            </p>

            <div class="form-group">
                <label for="contribution-value">Contribution Amount</label>
                <input type="number" step="0.01" id="contribution-value" name="value" required placeholder="0.00">
            </div>
            
            <div class="button-group mt-4">
                <button type="button" id="cancel-contribution-btn" class="btn-secondary">Cancel</button>
                <button type="submit" id="submit-contribution-btn" class="btn-primary">Record</button>
            </div>
        </form>
    </div>
</div>
