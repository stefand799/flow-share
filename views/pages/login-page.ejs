<div class="auth-container login-page-container">
    <h2>Sign In</h2>

    <!-- Error Display (shown when login fails) -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message">
            <p><strong>Login Failed!</strong></p>
            <p><%= error %></p>
        </div>
    <% } %>

    <!-- Login Form -->
    <form action="/auth/login" method="POST">
        <div>
            <label for="credentials">Username or Email</label>
            <input 
                type="text" 
                id="credentials" 
                name="credentials" 
                required 
                placeholder="Username or email address"
                value="<%= typeof credentials !== 'undefined' ? credentials : '' %>"
            >
        </div>

        <div>
            <label for="password">Password</label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                required 
                placeholder="Your password"
            >
        </div>

        <button type="submit">Log In</button>
    </form>

    <p>
        Don't have an account? 
        <a href="/register">Register now</a>
    </p>
</div>

<script defer src="/js/pages/login-page.js"></script>