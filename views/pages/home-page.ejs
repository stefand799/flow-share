<div class="main-page-layout">
    <!-- LEFT SECTION: 25% width - Profile Component -->
    <div id="left-column-content" class="profile-section">
        <%- include('../components/profile-component', { user: user }) %>
    </div>

    <!-- RIGHT SECTION: 75% width - Welcome Header + Group List -->
