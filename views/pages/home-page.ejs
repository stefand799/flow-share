        <!-- Welcome Header -->
        <div class="header">
            <h1 class="welcome-title">Welcome, <%= user.firstName || user.username %>!</h1>
            <p class="welcome-subtitle">Your central hub for group management and profile access.</p>
        </div>

        <!-- Group List Carousel -->
        <%- include('../components/group-list-component', { groups: groups }) %>
    </div>
</div>