<!-- home-page.ejs -->
<div class="home-page">
    
    <!-- Page Header -->
    <div class="page-header">
        <h1>Welcome, <%= user.username %>!</h1>
        <p class="subtitle">Manage your profile and groups</p>
    </div>
    
    <!-- Main Layout: Profile (left) + Groups (right) -->
    <div class="home-layout">
        
        <!-- LEFT SECTION: Profile (25% width) -->
        <div class="profile-section">
            <%- include('../components/profile-component', { user: user }) %>
        </div>
        
        <!-- RIGHT SECTION: Groups (75% width) -->
        <div class="groups-section">
            
            <!-- Section Header -->
            <div class="section-header">
                <h2>Your Groups</h2>
                <span class="group-count"><%= groups.length %> group<%= groups.length !== 1 ? 's' : '' %></span>
            </div>
            
            <!-- Group List Component -->
            <%- include('../components/group-list-component', { groups: groups, user: user }) %>
            
        </div>
        
    </div>
    
</div>