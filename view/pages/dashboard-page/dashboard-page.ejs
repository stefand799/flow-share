<div class="dashboard-page">
    
    <div class="page-header">
        <div class="header-left">
            <a href="/home" class="btn-back" title="Back to Home">
                â† Back
            </a>
            <div class="header-title">
                <h1><%= group.name %></h1>
                <p class="subtitle"><%= group.description || 'No description' %></p>
            </div>
        </div>
    </div>
    
    <div class="dashboard-layout">
        
        <div class="left-column">
            
            <div class="group-section">
                <h2 class="section-title">Group Details</h2>
                <%- include('../../components/group-component/group-component', { 
                    group: group, 
                    currentMember: currentMember,
                    members: members,
                    user: user
                }) %>
            </div>
            
            <div class="members-section">
                <h2 class="section-title">
                    Members 
                    <span class="count">(<%= members.length %>)</span>
                </h2>
                <%- include('../../components/members-component/members-component', { 
                    members: members, 
                    currentMember: currentMember,
                    groupId: group.id,
                    user: user
                }) %>
            </div>
            
        </div>
        
        <div class="right-column">
            
            <div class="view-toggle">
                <button id="kanban-btn" class="toggle-btn active" data-view="kanban" type="button">
                    <span class="toggle-icon">ğŸ“‹</span>
                    <span class="toggle-text">Kanban Board</span>
                </button>
                <button id="expenses-btn" class="toggle-btn" data-view="expenses" type="button">
                    <span class="toggle-icon">ğŸ’°</span>
                    <span class="toggle-text">Expenses</span>
                </button>
            </div>
            
            <div class="content-container">
                
                <div id="kanban-view" class="view-content active">
                    <%- include('../../components/kanban-component/kanban-component', { 
                        tasks: tasks,
                        group: group,
                        currentMember: currentMember,
                        members: members,
                        user: user
                    }) %>
                </div>
                
                <div id="expenses-view" class="view-content hidden">
                    <%- include('../../components/finance-component/finance-component', { 
                        expenses: expenses,
                        group: group,
                        members: members,
                        currentMember: currentMember,
                        user: user
                    }) %>
                </div>
                
            </div>
            
        </div>
        
    </div>
    
</div>

<script src="/pages/dashboard-page/dashboard-page.js"></script>